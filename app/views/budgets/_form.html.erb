<div class="container mt-5">
  <div class="row justify-content-center" >
    <div class="col-6 ">
      <%= simple_form_for(@budget, wrapper: :horizontal_form , 
      wrapper_mappings: {  boolean:       :horizontal_boolean}, 
      defaults: { input_html: { class: 'form-control-sm my-2' }, 
				label_html: { class: 'col-form-label my-2 col-form-label-sm' } }) do |f| %>
        <% if @budget.errors.any? %>
          <div data-controller='message' 
              data-message-name-value="error"  
              data-message-msg-value="<%= pluralize(@budget.errors.count, "error") %> encontrado(s), por favor verifique:">
          </div>
        <% end %>
        <%= f.input :year, as: :date, discard_day: true, discard_month: true %>
        <%= f.input :active, input_html: { class: 'form-check-input' }, label: false %>
        <hr>
        <%= btn_save %>  <% @btn_new = btn_cancel(budgets_path) %>
      <% end %>
    </div>
  </div>
</div>
